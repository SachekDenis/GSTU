@model ProductViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Price"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            <label asp-for="AmountInStorage"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.AmountInStorage
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ManufacturerName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ManufacturerName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="CategoryName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        @foreach (var field in Model.Fields)
        {
            <dt class="col-sm-2">
                <label>@field.CharacteristicName</label>
            </dt>
            <dd class="col-sm-10">
                @field.Value
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>