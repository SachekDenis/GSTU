@using System.Linq
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            <label asp-for="First().Name"></label>
        </th>
        <th>
            <label asp-for="First().Price"></label>
        </th>
        <th>
            <label asp-for="First().AmountInStorage"></label>
        </th>
        <th>
            <label asp-for="First().ManufacturerName"></label>
        </th>
        <th>
            <label asp-for="First().CategoryName"></label>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.AmountInStorage
            </td>
            <td>
                @item.ManufacturerName
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>|
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>|
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="Buy" asp-controller="Orders" asp-route-productId="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>