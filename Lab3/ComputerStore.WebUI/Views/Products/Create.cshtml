@model ComputerStore.WebUI.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ProductViewModel</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountInStorage" class="control-label"></label>
                <input asp-for="AmountInStorage" class="form-control"/>
                <span asp-validation-for="AmountInStorage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label"></label>
                @Html.DropDownListFor(model => model.ManufacturerId, Model.Manufacturers, new {@class = "form-control"})
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                @Html.DropDownListFor(model => model.CategoryId, Model.Categories, new {@class = "form-control", onchange = "generateFieldInputs()", id = "categoryList"})
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div id="fieldInputs"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(generateFieldInputs);
        decimalValidation();
    </script>
}